@model IEnumerable<TipoCuenta>

@{
    ViewData["Title"] = "Tipos Cuentas";
}

<h1>Tipos cuentas</h1>
<h5>
    El tipo cuenta se refiere a como podemos agrupas cuentas.
    Ejemplos: Prestamos, tarjeta de credito, etc.
</h5>

<a asp-action="Crer" class="btn btn-rimary mb-3">Crear Nuevo</a>

<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var tipoCuenta in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@tipoCuenta.Id">Editar</a>
                    <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@tipoCuenta.Id">Eliminar</a>
                </td>
                <td>
                    @tipoCuenta.Nombre
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(function(){
            $("#reordenable").sortable();
        })
    </script>
}